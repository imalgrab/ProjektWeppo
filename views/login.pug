html
    head
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700")
        link(rel="stylesheet" href="/css/main.css")
body
    .navbar
        ul
            li
                a(href='/').nav-elem.logo BookHub |
            li
                a(href='/').nav-elem Home |
            li
                a(href='#').nav-elem Test |
            li
                i.fas.fa-shopping-cart.nav-elem
            .right
                li
                    a(href='login').nav-elem#active Login |
                li
                    a(href='register').nav-elem Register |
    h1 
        | Logowanie
    .wrapper
        form(action="/login" method="post")  
            table.loginPanel
                if (success_msg.length)
                    each msg in success_msg
                        tr
                            td
                                label.successLbl #{msg}
                if (errors.length)
                    each error in errors
                        tr
                            td
                                label.errorLbl #{error}
                tr
                    td
                        label(for="username") Nazwa użytkownika:
                tr
                    td
                        input#username(type='text' name='username')
                tr
                    td
                        label(for="password") Hasło:
                tr
                    td
                        input#password(type='password' name='password')
                tr
                    td
                        button#login(type='submit' name='login') Zaloguj